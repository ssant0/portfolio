<script>

  const links = document.querySelectorAll('.lb');

  links.forEach(link => {
    link.addEventListener('click', () => {
      links.forEach(l => l.classList.remove('active'));
      link.classList.add('active');
    });
  });

</script>


<style>
  .lb.active {
    border-color: #2d5d54;
    color: #2d5d54;
  }
</style>

